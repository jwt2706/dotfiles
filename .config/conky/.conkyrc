conky.config = {
    --##############################################
    --# Settings
    --##############################################
    background = false,
    use_xft = true,
    font = 'Hurmit Nerd Font Mono:size=9',
    xftalpha = 1,
    update_interval = 1.0,
    total_run_times = 0,
    own_window = true,
    own_window_type = 'desktop',
    own_window_argb_visual = true,         -- enable ARGB for transparency
    own_window_argb_value = 150,           -- 0-255, lower = more transparent
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    double_buffer = true,
    minimum_width = 200, minimum_height = 200,
    maximum_width = 240,
    draw_shades = true,                     -- enable subtle shading behind text
    draw_outline = false,
    draw_borders = false,
    draw_graph_borders = true,

    alignment = 'middle_right',
    gap_x = 200,
    gap_y = 40,
    no_buffers = true,
    uppercase = false,
    cpu_avg_samples = 2,
    override_utf8_locale = false,

    -- Colors
    default_color = 'white',
    default_outline_color = 'black',
    default_shade_color = 'black',          -- subtle shadow for text

    color1 = 'b3e5fc',                     -- title color
    color2 = 'e6ffff',                     -- subtitle color
    color3 = '90caf9',                     -- text color
    color4 = 'ffe0b2',                     -- accent color
};

conky.text = [[

${color4}${alignc}${font Hurmit Nerd Font Mono:size=12}${USER}@${nodename}
${font Liberation Sans:size=36}${color1}${alignc}${time %I:%M}
${voffset -36}${font}${alignc}${color}${time %a, %d %B %Y}

${font}${color1}SYSTEM INFORMATION ${hr 2}
${color3}Kernel: ${alignr}${color}${kernel}
${color3}Distro: ${alignr}${color}${execi 999999999 lsb_release -d | grep 'Descr'|awk {'print $2" "$5'}}
${color3}Uptime: ${alignr}${color}${uptime}

${font}${color1}MEMORY ${hr 2}
${color3}Disk: ${alignr}${color}${fs_used /home}/${fs_size /home}
${color3}RAM: ${alignr}${color}${mem}/${memmax}

${font}${color1}CPU ${hr 2}
${color3}Total: ${alignr}${color}${cpu cpu0}%
${color3}Temprature: ${alignr}${color}${color}${alignr}${execi 5 sensors | grep CPU: | cut -c 16-19} C
${color4}${cpugraph 50,200 0000ff ff0000}
${color1}  Core 1:  ${color4}${cpubar cpu1 8,100}
${color1}  Core 2:  ${color4}${cpubar cpu2 8,100}
${color1}  Core 3:  ${color4}${cpubar cpu3 8,100}
${color1}  Core 4:  ${color4}${cpubar cpu4 8,100}

]];

